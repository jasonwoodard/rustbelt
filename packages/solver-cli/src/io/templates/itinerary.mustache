<html>
  <head>
    <meta charset="utf-8" />
    <title>Itinerary</title>
  </head>
  <body>
    {{#runId}}
    <p>Run ID: {{runId}}</p>
    {{/runId}}
    {{#runNote}}
    <p>Run note: {{runNote}}</p>
    {{/runNote}}
    <p>Run timestamp: {{runTimestamp}}</p>
    {{#days}}
    <h2>Day {{dayId}}</h2>
    <table>
      <thead>
        <tr>
          <th>Arrive</th>
          <th>Depart</th>
          <th>Stop</th>
          <th>Type</th>
          <th>Score</th>
          <th>Tags</th>
        </tr>
      </thead>
      <tbody>
        {{#stops}}
        {{> stop}}
        {{/stops}}
      </tbody>
    </table>
    {{/days}}
  </body>
</html>
