{
  "name": "rustbelt",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:day-of-app",
    "build:day-of-app": "esbuild src/io/dayOfApp/index.ts --bundle --format=iife --target=es2019 --outfile=out/day-of-app.js --sourcemap",
    "dev": "npm-run-all --parallel dev:cli dev:day-of-app",
    "dev:cli": "tsx watch src/index.ts",
    "dev:day-of-app": "esbuild src/io/dayOfApp/index.ts --bundle --format=iife --target=es2019 --outfile=out/day-of-app.js --sourcemap --watch",
    "test": "vitest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "mustache": "^4.2.0",
    "open-location-code": "^1.0.3",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.3.0",
    "@types/open-location-code": "^1.0.1",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@xmldom/xmldom": "^0.8.11",
    "esbuild": "^0.24.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
