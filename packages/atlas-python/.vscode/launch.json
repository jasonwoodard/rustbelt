{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Atlas CLI — help",
      "type": "debugpy",
      "request": "launch",
      "module": "atlas.cli",
      "args": ["--help"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Atlas CLI — score (prior-only)",
      "type": "debugpy",
      "request": "launch",
      "module": "atlas.cli",
      "args": [
        "score",
        "--mode", "prior-only",
        "--stores", "inputs/atlas_store_input.csv",
        "--affluence", "inputs/atlas_affluence_input.csv",
        "--output", "out/dense_prior.csv",
        "--trace-out", "out/dense_prior_trace.jsonl"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }

